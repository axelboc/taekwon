{
  "name": "taekwon",
  "version": "2.0.0",
  "author": "Axel Bocciarelli",
  "description": "Scoring software for ITF Taekwon-Do sparring matches",
  "license": "CC-BY-NC-SA-4.0",
  "repository": {
    "type": "git",
    "url": "http://github.com/axelboc/taekwon"
  },
  "scripts": {
    "start": "npm run watch",
    "build:clients": "gulp build",
    "build:server": "babel server -d bin",
    "build": "cross-env NODE_ENV=production concurrently -k \"npm run build:clients\" \"npm run build:server\"",
    "prebuild": "npm run lint",
    "watch:clients": "gulp watch",
    "watch:server": "nodemon server/index.js -w server --exec \"babel-node\"",
    "watch": "concurrently -k \"npm run watch:clients\" \"npm run watch:server\"",
    "lint:clients": "eslint clients/** --env es6,browser,mocha --cache",
    "lint:server": "eslint server/** --env es6,node,mocha --cache",
    "lint": "concurrently -k \"npm run lint:clients\" \"npm run lint:server\"",
    "test": "mocha",
    "test:watch": "npm run test -- --watch",
    "ci": "concurrently -k \"npm run lint\" \"npm test\""
  },
  "engines": {
    "node": "^4.3.2",
    "npm": "^3.8.0"
  },
  "dependencies": {
    "connect": "^3.4.1",
    "dotenv": "^2.0.0",
    "immutable": "^3.7.6",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "reduce-reducers": "^0.1.2",
    "redux": "^3.3.1",
    "redux-immutablejs": "0.0.8",
    "serve-static": "^1.10.2",
    "socket.io": "^1.4.5",
    "socket.io-client": "^1.4.5"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.6.5",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "chai-immutable": "^1.5.3",
    "concurrently": "^2.0.0",
    "cross-env": "^1.0.7",
    "envify": "^3.4.0",
    "eslint": "^2.3.0",
    "event-stream": "^3.3.2",
    "gulp": "^3.9.1",
    "gulp-util": "^3.0.7",
    "livereactload": "^2.2.0",
    "minifyify": "^7.3.2",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.1",
    "react-proxy": "^1.1.8",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
