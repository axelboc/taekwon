{
  "name": "taekwon",
  "version": "2.0.0",
  "author": "Axel Bocciarelli",
  "description": "Scoring software for ITF Taekwon-Do sparring matches",
  "license": "CC-BY-NC-SA-4.0",
  "repository": {
    "type": "git",
    "url": "http://github.com/axelboc/taekwon"
  },
  "scripts": {
    "start": "npm run watch",
    "build:clients": "gulp build",
    "build:server": "babel (transpile server-side into build folder)",
    "build": "concurrent \"npm run build:clients\" \"npm run build:server\"",
    "watch:clients": "gulp watch",
    "watch:server": "babel-watch (run server and watch for changes)",
    "watch": "concurrent \"npm run watch:clients\" \"npm run watch:server\"",
    "lint": "(lint server and client-side JS code with ESLint)",
    "test": "(run unit tests)",
    "ci": "concurrent \"npm run lint\" \"npm test\""
  },
  "engines": {
    "node": "^4.3.2",
    "npm": "^3.3.6"
  },
  "dependencies": {
    "react": "^0.14.7",
    "redux": "^3.3.1"
  },
  "devDependencies": {
    "babel-plugin-react-transform": "^2.0.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "event-stream": "^3.3.2",
    "gulp": "^3.9.1",
    "gulp-util": "^3.0.7",
    "livereactload": "^2.2.0",
    "minifyify": "^7.3.2",
    "react-proxy": "^1.1.2",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  }
}
