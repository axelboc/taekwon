{
  "name": "taekwon",
  "version": "2.0.0",
  "author": "Axel Bocciarelli",
  "description": "Scoring software for ITF Taekwon-Do sparring matches",
  "license": "CC-BY-NC-SA-4.0",
  "repository": {
    "type": "git",
    "url": "http://github.com/axelboc/taekwon"
  },
  "scripts": {
    "start": "npm run watch",
    "build:clients": "gulp build",
    "build:server": "babel server -d server/build --ignore server/build --presets es2015 --babelrc false",
    "build": "concurrent --kill-others \"npm run build:clients\" \"npm run build:server\"",
    "prebuild": "npm run lint",
    "watch:clients": "gulp watch",
    "watch:server": "nodemon server/index.js -w server --ignore server/build --exec \"babel-node --presets es2015\"",
    "watch": "concurrent --kill-others \"npm run watch:clients\" \"npm run watch:server\"",
    "lint:clients": "eslint clients/** --env es6,browser --cache",
    "lint:server": "eslint server/** --env es6,node --cache --ignore-pattern server/build/**",
    "lint": "concurrent --kill-others \"npm run lint:clients\" \"npm run lint:server\"",
    "test": "(run unit tests)",
    "ci": "concurrent --kill-others \"npm run lint\" \"npm test\""
  },
  "engines": {
    "node": "^4.3.2",
    "npm": "^3.3.6"
  },
  "dependencies": {
    "react": "^0.14.7",
    "redux": "^3.3.1"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-plugin-react-transform": "^2.0.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "concurrently": "^2.0.0",
    "eslint": "^2.3.0",
    "event-stream": "^3.3.2",
    "gulp": "^3.9.1",
    "gulp-util": "^3.0.7",
    "livereactload": "^2.2.0",
    "minifyify": "^7.3.2",
    "nodemon": "^1.9.1",
    "react-proxy": "^1.1.2",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.7.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    }
  }
}
