{% extends "layout.njk" %}
{% block body %}

	{# Error view #}
	{% include "error-view.njk" %}

	{# Name view (identification) #}
	<div id="login" class="view hidden">
		<h1>{{ title }}</h1>
		<form class="action login-form" action="#">
			<p class="login-instr instr">Enter your name</p>
			<input class="login-field field" type="text" autocapitalize="on">
			<button class="login-btn btn" type="submit" title="Go">&raquo;</button>
		</form>
	</div>

	{# Ring List view (ring selection) #}
	{% include "ring-list-view.njk" %}

	{# Waiting view (waiting for authorisation to join ring) #}
	<div id="waiting" class="view hidden">
		<h1>{{ title }}</h1>
		<div class="action">
			<p class="instr">Waiting for authorisation...</p>
			<button class="wa-btn btn btn--minor" type="button">Cancel</button>
		</div>
	</div>

	{# Round view (scoring) #}
	<div id="round" class="view hidden">
		<button type="button" class="undo-btn btn btn--minor no-hover">Undo</button>
		<div class="score-btns score-btns--hong" data-max="{{ maxScore }}">
			{% for val in range(0, maxScore) -%}
				{% set score = maxScore - val %}
				<button type="button" class="score-btn score-btn--{{ score }} hong-bg">{{ score }}</button>
			{%- endfor %}
		</div>
		<div class="score-btns score-btns--chong" data-max="{{ maxScore }}">
			{% for val in range(0, maxScore) -%}
				{% set score = maxScore - val %}
				<button type="button" class="score-btn score-btn--{{ score }} chong-bg">{{ score }}</button>
			{%- endfor %}
		</div>
		<div class="feedback"></div>
	</div>

	{# Backdrop #}
	{% include "backdrop.njk" %}

{% endblock %}
